</head>

<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">ABKMP</a>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active mx-3" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link" href="/api/v1/admin/create/vlog">Add Vlog</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link" href="/api/v1/admin/create/blog">Add Blog</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link" href="/api/v1/admin/create/literature">Add Literature</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link" href="/api/v1/admin/create/banner">Add Banner</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>


    <div class="container align-middle">
        <div class="container mx-5 px w-50 ">
            <h1>
                Add Blog
            </h1>
            <form action="/api/v1/admin/create/blog" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Title</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" name="title"
                        aria-describedby="emailHelp">
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Banner</label>
                    <input type="file" class="form-control" id="exampleInputEmail1" name="banner"
                        aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputthumb" class="form-label">Thumbnail</label>
                    <input type="file" class="form-control" id="exampleInputthumb" name="thumbnail"
                        aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputDate" class="form-label">Date</label>
                    <input type="date" class="form-control" id="exampleInputDate" name="date"
                        aria-describedby="emailHelp">
                </div>
                 <div class="mb-3">
                    <label for="exampleInputDate" class="form-label">Description</label>
                    <div class="noclass">
                        <textarea id="w3review" name="description" rows="4" cols="50">
                   event organized at near...
                </textarea>
                    </div>
                </div>
                 <div class="mb-3">
                    <label for="exampleInputimages" class="form-label">Image</label>
                    <input type="file" class="form-control" multiple id="exampleInputimages" name="image"
                        aria-describedby="emailHelp">
                </div>

                

                <label class="my-5" for="lang">Blog Type</label>
                <select name="blogtype" id="lang">
                    <option value="Upcoming Event">Upcoming Event</option>
                    <option value="News and Update">News and Update</option>
                    <option value="Recent Event">Recent Event</option>
                    <option value="Blog">Blog</option>
                </select>


                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

